// Online C compiler to run C program online
#include <stdio.h>

int main() {
    int arr[] = {2, 4,1,7,5,0};
    int max = 0, m = 0, i = 0;

    //  Finding the maximum element and its index
    while (i < 6) {
        if (arr[i] > max) {
            max = arr[i];
            m = i;
        }
        i++;
    }
    printf("%d %d\n", max, m);
    for (i = m - 1; i < 6; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    //finding the least greatest after the greatest no.
    if (6 - m - 1 >= 2) {
        int minGreater = max + 1, min = -1;
        for (i = m; i < 6; i++) {
            if (arr[i] > arr[m - 1] && arr[i] < minGreater) {
                minGreater = arr[i];
                min = i;
            }
        }

            int temp = arr[m - 1];
            arr[m - 1] = arr[min];
            arr[min] = temp;
            printf("\n%d \n", arr[m-1]);
        
    } else {
        int temp = arr[m - 1];
        arr[m - 1] = arr[6 - 1];
        arr[6 - 1] = temp;
    }

    for (i = 0; i < 6; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    for (int j = 0; j <= 6 - m - 1; j++) {
        for (i = m; i < 6 - 1; i++) {
            if (arr[i] > arr[i + 1]) {
                int temp = arr[i];
                arr[i] = arr[i + 1];
                arr[i + 1] = temp;
            }
        }
    }

    i = 0;
    while (i < 6) {
        printf("%d ", arr[i]);
        i++;
    }

    return 0;
}
