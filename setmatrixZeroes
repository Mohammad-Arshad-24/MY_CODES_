class Solution(object):
        def setZeroes(self,matrix):
            m, n = len(matrix), len(matrix[0])

            # Step 1: Identify the rows and columns that need to be zeroed
            zero_rows = set()
            zero_cols = set()

            for i in range(m):
                for j in range(n):
                    if matrix[i][j] == 0:
                        zero_rows.add(i)
                        zero_cols.add(j)

            # Step 2: Set the identified rows and columns to zero
            for i in range(m):
                for j in range(n):
                    if i in zero_rows or j in zero_cols:
                        matrix[i][j] = 0
            return matrix
